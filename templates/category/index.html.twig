{% extends 'base.html.twig' %}
{% block title %}Categories{% endblock %}
{% block body %}
<h1>Categories</h1>
<ul>
    {% for category in categories %}
        <li><a href="{{ path('category_show', {'slug': category.slug}) }}">{{ category.name }}</a></li>
    {% else %}
        <li>No categories.</li>
    {% endfor %}
</ul>
<a href="{{ path('category_new') }}" class="btn btn-primary">Add Category</a>
{% endblock %}
