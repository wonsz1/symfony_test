{% extends 'base.html.twig' %}
{% block title %}Posts{% endblock %}
{% block body %}
<h1>Posts</h1>
<ul>
    {% for post in posts %}
        <li><a href="{{ path('post_show', {'slug': post.slug}) }}">{{ post.title }}</a> ({{ post.category.name }})</li>
    {% else %}
        <li>No posts.</li>
    {% endfor %}
</ul>
<a href="{{ path('post_new') }}" class="btn btn-primary">Add New Post</a>
{% endblock %}
