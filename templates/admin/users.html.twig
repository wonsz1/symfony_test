{% extends 'base.html.twig' %}

{% block title %}Admin - Users{% endblock %}

{% block body %}
<h1>Lista użytkowników</h1>
<a href="{{ path('admin_dashboard') }}">&larr; Powrót do panelu</a>
<table class="table">
    <thead>
        <tr><th>ID</th><th>Email</th><th>Roles</th><th>Active</th><th>Registered</th></tr>
    </thead>
    <tbody>
    {% for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.roles|join(', ') }}</td>
            <td>{% if user.isActive %}✔{% else %}✖{% endif %}</td>
            <td>{{ user.createdAt|date('Y-m-d H:i') }}</td>
        </tr>
    {% else %}
        <tr><td colspan="5">No users found.</td></tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
